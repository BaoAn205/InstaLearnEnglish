<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for Station Nodes -->
    <style name="StationNodeStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="backgroundTint">#9C27B0</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <!-- Style for Station Labels -->
    <style name="StationLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">#80000000</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>
