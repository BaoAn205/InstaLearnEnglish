<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_tip_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:tint="#9C27B0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:src="@android:drawable/ic_menu_save" />

                <ImageButton
                    android:id="@+id/btn_save_tip"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/btn_star_big_off"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="#9C27B0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tip_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="The Rolling Method" />

                <ImageButton
                    android:id="@+id/btn_speak_tip"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#9C27B0" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tip_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:textColor="#424242"
                android:textSize="22sp"
                tools:text="Rolling your clothes instead of folding them saves a lot of space in your suitcase and helps reduce wrinkles." />

            <Button
                android:id="@+id/btn_show_translation"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Xem bản dịch"
                android:textColor="#9C27B0" />

            <TextView
                android:id="@+id/tv_tip_vietnamese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="#388E3C"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Cuộn quần áo thay vì gấp sẽ tiết kiệm được nhiều không gian trong vali và giúp giảm nếp nhăn." />

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>