<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_archive_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_archive_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            app:tint="#757575"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/tip_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_tip_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/ic_rolling_clothes" />

            <TextView
                android:id="@+id/tv_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:text="The Rolling Method" />

            <TextView
                android:id="@+id/tv_tip_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="6dp"
                android:textAlignment="center"
                android:textColor="#424242"
                android:textSize="22sp"
                tools:text="Rolling your clothes instead of folding them saves a lot of space in your suitcase and helps reduce wrinkles." />

            <TextView
                android:id="@+id/tv_tip_vietnamese_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="6dp"
                android:textAlignment="center"
                android:textColor="#00796B"
                android:textSize="20sp"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Cuộn quần áo thay vì gấp giúp tiết kiệm không gian và giảm nếp nhăn." />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_speak_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Speak tip"
            android:src="@android:drawable/ic_media_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="#757575" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
